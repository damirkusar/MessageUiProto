<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/darker_gray"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_blueborder"
        android:paddingBottom="10dp"
        android:paddingTop="5dp">

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/detail_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Dog Tag"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#040404"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_toRightOf="@+id/detail_image"/>

    <TextView
        android:id="@+id/detail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Create an NFC Pet Tag"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/secondary_text_dark"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/detail_image"
        android:layout_below="@+id/detail_message"/>

    <TextView
        android:id="@+id/detail_severity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Severity"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textColor="@android:color/secondary_text_dark"
        android:layout_toRightOf="@+id/detail_image"
        android:layout_below="@+id/detail_description"
        />

    <TextView
        android:id="@+id/detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Severity"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textColor="@android:color/secondary_text_dark"
        android:layout_toRightOf="@+id/detail_image"
        android:layout_below="@+id/detail_severity"
        />
    </RelativeLayout>
</RelativeLayout>